<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Himeno_Flex.MainPage">

    <Grid>
        <!-- ここからメインUI -->
        <Grid.RowDefinitions>
            <RowDefinition
                Height="80"/>
            <RowDefinition
                Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid BackgroundColor="LightPink" />

        <StackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label
                Text="Himeno Flex"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                FontSize="40"
                TextColor="white"/>
        </StackLayout>

        <Path Grid.RowSpan="2"
            Fill="LightCyan"
            Data="M 0,100 L 0,200 L 200,0 L 100,0 Z">
        </Path>
        <!-- ここまでメインUI -->
        
        <!-- ベンチ結果表示部分 -->
        <ScrollView Grid.Row="1">
            <!-- ベンチ結果を表示 -->
        </ScrollView>

    </Grid>

</ContentPage>
